{
  "$schema": "https://opencode.ai/config.json",
  "theme": "matrix", // theme config
  "model": "anthropic/claude-sonnet-4-5", // default AI model
  "autoupdate": true,
  "mcp": {
    "trello-mcp": {
      "enabled": true,
      "type": "local",
      "command": ["bunx", "@delorenj/mcp-server-trello"],
      "environment": {
        "TRELLO_API_KEY": "${TRELLO_API_KEY}",
        "TRELLO_TOKEN": "${TRELLO_TOKEN}",
        "TRELLO_WORKSPACE_ID": "5e3b72efe4a02a6cf792799f"
      },
    },
    "github": {
      "enabled": true,
      "type": "local",
      "command": [
        "docker", "run", "-i", "--rm",
        "-e", "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}",
      },
    },
  },
}

